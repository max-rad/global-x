mixin header(headerMods, currentUrl)
  -
    const navLinks = [
      {
        href: "#",
        text: "Интернет",
      },
      {
        href: "#",
        text: "Телевидение"
      },
      {
        href: "#",
        text: "Выгодно"
      },
      {
        href: "#",
        text: "Видеонаблюдение"
      },
      {
        href: "#",
        text: "Оборудование"
      },
      {
        href: "#",
        text: "Информация"
      },
      {
        href: "#",
        text: "Контакты"
      }
    ]

  header.header(class=headerMods data-header)
    .container
      .header__wrapper
        a.header__logo(href="index.html", aria-label="Переход на главную")
          +icon("logo", 199, 43)
        nav.main-nav
          a.main-nav__user(href="#" aria-label="Личный кабинет")
            +icon("icon-user", 23, 22)
          button(type="button" aria-label="Переключатель отображения меню", aria-pressed="false" data-toggle-menu).btn-reset.main-nav__toggle
            span
            span
            span
          .main-nav__menu
            +info-bar()
            ul.list-reset.main-nav__list
              each item in navLinks
                li.main-nav__item
                  a.main-nav__link(href=item.href)!=item.text
                    +icon("icon-chevron-right", 24, 24)
            a.main-nav__phone(href="tel:+73496458000") +7 (3496) 45-80-00
